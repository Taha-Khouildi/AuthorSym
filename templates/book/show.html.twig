<h1>Détails du livre</h1>

<table border="1">
    <tr><th>Titre</th><td>{{ book.title }}</td></tr>
    <tr><th>Date de publication</th><td>{{ book.publishDate ? book.publishDate|date('Y-m-d H:i') : 'N/A' }}</td></tr>
    <tr><th>Catégorie</th><td>{{ book.category }}</td></tr>
    <tr><th>Auteur</th><td>{{ book.author ? book.author.username : 'N/A' }}</td></tr>
    <tr><th>Publié</th><td>{{ book.Published ? 'Oui' : 'Non' }}</td></tr>
</table>

<a href="{{ path('author_getBooks') }}">← Retour à la liste des livres</a>
